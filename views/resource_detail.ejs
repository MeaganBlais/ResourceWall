<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <!-- External Stylesheets -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.css">

    <!-- Our Stylesheets -->
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />

    <!-- External Javascript -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.js"></script>

    <!-- Our Javascript -->
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/user-functions.js"></script>
    <script type="text/javascript" src="/scripts/resource_detail.js"></script>
    <script type="text/javascript" src="/scripts/char-counter.js"></script>
    <script type="text/javascript" src="/scripts/ratings.js"></script>





  </head>

  <body>

    <% include partials/_nav %>

    <div class="container">
    <!-- Example Resource -->
      <article class="resource-container" id='resource-<%= id %>' data-resource-data="test">
        <header>
          <h1><a id="url" href="<%= URL%>" data-id="<%= id %>"><%= title %></a></h1>
        </header>
        <section>
          <p><%= description %></p>
        </section>
        <footer>
          <span>
            <img class="avatar" src="<%= avatar_URL%>">
            <span><%= user_name%></span>
          </span>
          <span class="icons pull-right">
            <span class="ratings">
              <div class="rateYo">
                <input type="radio" name="example" class="rating" value="1" />
                <input type="radio" name="example" class="rating" value="2" />
                <input type="radio" name="example" class="rating" value="3" />
                <input type="radio" name="example" class="rating" value="4" />
                <input type="radio" name="example" class="rating" value="5" />
              </div>
              <span class="avg_rating"></span>
            </span>
            <span class="heart-comments">
              <span class="likes"><i class="glyphicon glyphicon-heart"></i> <span id="totalOfLikes"></span>4</span>
              <span class="comments"><i class="glyphicon glyphicon-comment"></i> <span id="totalOfComments">2</span></span>
            </span>
          </span>
          <span calss="categories">
            <p>tag 1</p>
            <p>tag 2</p>
          </span>
        </footer>
      </article>

      <article  class="comment_container">
        <form action="/api/resources/<%= id %>/comments" method=POST id="new-comment">
          <header>
            <img class="avatar" id="avatar_comment" src ="https://www.fillmurray.com/200/300">
            <span class="input_user" data-id=''>Username</span>
          </header>
          <div class="input-comment">
            <textarea type="text" class="form-control" placeholder="Your comment..." name="comment"></textarea>


          </div>
          <footer class="comment_footer">
            <p id="message"></p> <!-- flash messages will be shown here -->
            <button class="btn btn-default" id="input-comment-btn" type="submit">Submit</button>
            <span class="counter">255</span>
          </footer>
        </form>
      </article>

      <!-- Posted comments will be appended here-->
      <section id="show_comments_container">
      </section>

    </div>
  </body>
</html>
