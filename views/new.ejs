<!DOCTYPE html>
<html lang="en">
<head>
  <title>New Resource</title>

  <!-- External Stylesheets -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  <!-- Our Stylesheets -->
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />

  <!-- External Javascript -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/vendor/typeahead.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>


  <!-- Our Javascript -->
  <script type="text/javascript" src="/scripts/user-functions.js"></script>
  <script type="text/javascript" src="/scripts/char-counter.js"></script>
  <script type="text/javascript" src="/scripts/tags.js"></script>
  <script type="text/javascript" src="/scripts/new.js"></script>
  <script type="text/javascript" src="/scripts/validations.js"></script>

</head>

<body>

  <% include partials/_nav %>
  <div class="container" data-categories="<%= JSON.stringify(categories) %>">
    <div class="new-container">
      <h1>Add New Resource</h1>
      <form id="new-resource">
        <div class="input-group">
          <span class="input-group-addon">URL (*)</span>
          <input id="URL" type="URL" name="URL" class="form-control" placeholder="Resource URL">
        </div>
        <div class="input-group">
          <span class="input-group-addon">Title (*)</span>
          <input id="title" type="text" name="title" class="form-control" placeholder="Title">
        </div>
        <div class="input-group">
          <span class="input-group-addon">Description (*)</span>
          <textarea id="description" type="text" name="description" class="form-control" placeholder="Description"></textarea>
        </div>
         <div class="counter">
          <p id="message"></p> <!-- flash messages will be shown here -->
          <span>255</span>
        </div>
        <div class="tag-container">
          <!-- Tags appended here-->
        </div>
        <button class="btn btn-default pull-right" id="submit-resource-btn" type="submit">Submit</button>
      </form>
      <form id="tag-form">
        <div class="input-group">
          <span class="input-group-addon">Tags</span>
          <input id="tag-search" type="text" name="tags" class="form-control" placeholder="Enter tags..." autocomplete="off">
          <button type="submit" class="btn btn-default hidden-button">+</button>
        </div>
      </form>
    </div>

  </div>

</body>
</html>
